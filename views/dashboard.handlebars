{{> nav/nav-block}}

<div id="main-container" class="container shadow-md">
  <div class="text-center header-wrap" align="center">
    <p class="lead"> Welcome to <span class="logotext">Subscription Tracker</span></p>
    <p class="big-emoji">🗓️</p>
    <p class="text-base">The world's premier application for tracking subscriptions for households. </p>
    <hr class="my-4">
    <div>
      {{#if isloggedin}}
        You are logged in as {{user.firstName}}
        <div id='calendar'></div>
        <a href="/logout"> <button type="btn" class="btn">Logout</button></a>
      {{else}}
        <p class="text-base">New here?</p>
        <p class="text-base">You need to log in to use this app.</p>
      {{/if}}
      <h5 id="login-err-msg"></h5>
    </div>
  </div>
</div>



