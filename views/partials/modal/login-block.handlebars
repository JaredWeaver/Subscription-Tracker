<div class="modal shadow-lg" id="user-info" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-yellow-600">
        <p class="text-4xl text-4xltext-center">Credentials</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body bg-gray-200">
        <form>
          <div class="form-group">
            <label for="inputAccount">Email</label>
            <input type="text" class="form-control shadow-lg" id="email">
          </div>
          <div class="form-group">
            <label for="inputAccount">Password</label>
            <input type="password" class="form-control shadow-lg" id="user_password">
          </div>
        </form>
      </div>

      <div class="modal-footer bg-yellow-600">
        <button id="login" type="button" class="btn btn-primary">Login</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
